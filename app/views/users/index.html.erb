<h1>Welcome!</h1>
<h2>Register</h2>
<% if flash[:reg_errors] %>
  <% flash[:reg_errors].each do |e| %>
    <p><%= e %></p>
  <% end %>
<% end %>
<form action="/users/" method="post">
	<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
	<label for="first_name">First Name</label>
	<input type="text" name="user[first_name]" id="first_name">
	<label for="last_name">Last Name</label>
	<input type="text" name="user[last_name]" id="last_name">
	<label for="email">Email</label>
	<input type="text" name="user[email]" id="email">
	<label for="password">Password</label>
	<input type="password" name="user[password]" id="password">
	<input type="submit" value="Register">
</form>
<h2>Login</h2>
<% if flash[:login_error] %>
  <p><%= flash[:login_error] %></p>
<% end %>
<form action='/users/login' method='post'>
	<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
	<label for="email">Email</label>
	<input type="text" name="session[email]" id="email">
	<label for="password">Password</label>
	<input type="password" name="session[password]" id="password">
	<input type="submit" value="Log In">
</form>